extends layout
block bodyContent

    h1 USERS

    table
        tr
            th
                a(href=`sort/lastname/${sortOrder}`)='Last Name'
            th
                a(href=`sort/firstname/${sortOrder}`)='First Name'
            th
                a(href=`sort/password/${sortOrder}`)='Password'
            th
                a(href=`sort/email/${sortOrder}`)='Email'
            th
                a(href=`sort/age/${sortOrder}`)='Age'
            th='-----------'
        each val in users
            tr
                td=val.lastName
                td=val.firstName
                td=val.password
                td=val.email
                td=val.age
                td
                    a(class="td-link",  href=`user/${val.firstName}&${val.lastName}&${val.email}`)="View"
                    a(class="td-link",  href=`edit/${val.firstName}&${val.lastName}&${val.email}`)="Edit"
                    a(class="td-link", href=`delete/${val.firstName}&${val.lastName}&${val.email}`)="Delete"

    div(class="needs-margin")
        a(class="needs-margin", href=`/add-user`)="Add User"